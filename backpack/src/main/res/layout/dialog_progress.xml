<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_progress_padding_bottom"
    android:paddingLeft="@dimen/dialog_progress_padding_top_left_right"
    android:paddingRight="@dimen/dialog_progress_padding_top_left_right"
    android:paddingTop="@dimen/dialog_progress_padding_top_left_right">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        app:trackCornerRadius="2dp"
        tools:progress="20" />

    <TextView
        android:id="@+id/progress_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        tools:text="20% - Retrieving PINs..." />

</LinearLayout>
