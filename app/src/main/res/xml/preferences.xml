<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Dummy Category">

        <SwitchPreferenceCompat
            app:key="setting_example"
            app:defaultValue="false"
            app:singleLineTitle="false"
            app:title="Dummy setting normal"
            app:summary="This is a normal setting" />

        <SwitchPreferenceCompat
            app:key="setting_example2"
            app:defaultValue="false"
            app:singleLineTitle="false"
            app:title="Dummy setting requiring restart"
            app:summary="Changing this setting requires an app restart" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="@string/preference_key_adaptive_colors"
            app:defaultValue="false"
            app:singleLineTitle="false"
            app:enabled="false"
            app:title="@string/preference_item_material_you"
            app:summary="@string/preference_item_material_you_summary"
            app:icon="@drawable/colored_ic_art" />

    </PreferenceCategory>

</PreferenceScreen>
